
<div class="container">
  <h1>Stupid Coaching</h1>

  <figure>
    <blockquote class="blockquote">
      <%= params["question"] %>
    </blockquote>
    <figcaption class="blockquote-footer">You</figcaption>
  </figure>

  <figure>
    <blockquote class="blockquote">
      <% if params["question"] === 'I am going to work' %>
          <%= "Great!" %>
        <% elsif params["question"][-1] === '?' %>
          <%= "Silly question, get dressed and go to work!" %>
        <% else %>
          <%= "I don't care, get dressed and go to work!" %>
        <% end %>
    </blockquote>
    <figcaption class="blockquote-footer">Your coach</figcaption>
  </figure>

  <%= link_to "ask a new question, dawg", "/ask" %>
</div>
